<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Switch_info">

    <Switch
            android:text="Public?"
            android:textSize="28sp"
            android:layout_width="401dp"
            android:layout_height="59dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:id="@+id/Settings_switch"
            app:layout_constraintEnd_toEndOf="parent"
            android:switchTextAppearance="@style/TextAppearance.AppCompat.Display1"
            android:visibility="visible"
            android:checked="true"
            android:key="switch"
            android:summary="Turn this option on or off" />

    <EditText
            android:layout_width="402dp"
            android:layout_height="145dp"
            android:inputType="textPersonName"
            android:text="Uncheck if you would like to be private"
            android:textSize="18sp"
            android:ems="10"
            android:id="@+id/editTextTextPersonName"
            app:layout_constraintTop_toBottomOf="@+id/Settings_switch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>